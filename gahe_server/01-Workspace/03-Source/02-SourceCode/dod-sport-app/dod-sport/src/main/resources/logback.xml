<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration debug="true" scan="true" scanPeriod="30 seconds">

    <!-- ices-kc模块存放日志文件路径 -->
    <property name="Log_Home" value="/gahe/logs/app/server" />

    <!-- info级别-->
    <appender name="INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <Encoding>UTF-8</Encoding>
        <File>${Log_Home}info/info.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${Log_Home}info/info.%d{yyyy-MM-dd}.%i.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- debug级别 -->
    <appender name="DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <Encoding>UTF-8</Encoding>
        <File>${Log_Home}debug/debug.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${Log_Home}debug/debug.%d{yyyy-MM-dd-HH}.%i.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- error级别-->
    <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <Encoding>UTF-8</Encoding>
        <File>${Log_Home}error/error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${Log_Home}error/error.%d{yyyy-MM-dd-HH}.%i.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- 数据库日志 -->
    <appender name="JDBC" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Encoding>UTF-8</Encoding>
        <File>${Log_Home}jdbc/jdbc.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${Log_Home}jdbc/jdbc.%d{yyyy-MM-dd}.%i.log
            </FileNamePattern>
            <MaxHistory>720</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>2MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <Pattern>%d{MM-dd HH:mm:ss.SSS} %t %logger%n%level：%msg%n</Pattern>
        </encoder>
    </appender>

    <!-- 控制台日志 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{yyyyMMdd-HH:mm:ss.SSSZ}|%contextName|%thread|%-5level|%logger|%msg%n
            </Pattern>
        </encoder>
    </appender>

    <!-- 数据库日志 -->
    <logger name="com.dod.sport.dao" level="debug" additivity="false">
        <appender-ref ref="JDBC" />
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 当前日志总级别为debug -->
    <root level="DEBUG">
        <appender-ref ref="DEBUG" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="INFO" />
        <appender-ref ref="ERROR" />
    </root>

    <!-- 其他第三方日志 -->
    <logger name="org.logicalcobwebs.proxool" level="off" />
    <logger name="org.springframework" level="off" />
    <logger name="org.mybatis.spring" level="off" />
    <logger name="org.apache" level="off" />
</configuration>
