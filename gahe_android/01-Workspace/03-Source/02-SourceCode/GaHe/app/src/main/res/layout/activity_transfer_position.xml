<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/head2_view"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--门店名称-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvLabel1"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="门店名称           张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <!--所在部门-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvLabel2"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="所在部门           张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <!--工号-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvLabel3"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="工         号           张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <!--证件号-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvLabel4"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="证  件  号           张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <!--岗位-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvLabel5"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="岗         位           张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <!--入职日期-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvLabel6"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="入职日期           张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <!--工龄-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvLabel7"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="工         龄           张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <!--调岗原因-->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/home_text_normal"
                    android:layout_weight="5"
                    android:layout_marginTop="5dp"
                    android:text="调岗原因"
                    android:id="@+id/tvUnderstand1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:hint="请输入"
                    android:scrollbars="none"
                    android:id="@+id/evUnderstand1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_marginTop="5dp"
                android:background="@color/f0f0f0"/>
        </LinearLayout>

        <!--调整后部门-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDepartmentText"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""/>

            <TextView
                android:id="@+id/tvDepartment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="请选择(必填)"/>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@color/transparent"
                android:src="@drawable/xiayibu"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginTop="-2dp"
            android:background="@color/f0f0f0"/>

        <!--调整后职位-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPlaceText"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""/>

            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="请选择(必填)"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@color/transparent"
                android:src="@drawable/xiayibu"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginTop="-2dp"
            android:background="@color/f0f0f0"/>

        <!--调整日期-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="调整日期"/>

            <TextView
                android:id="@+id/tvAdjustDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="请选择(必填)"/>

            <ImageView
                android:id="@+id/image3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@color/transparent"
                android:src="@drawable/xiayibu"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginTop="-5dp"
            android:background="@color/f0f0f0"/>

        <include layout="@layout/layout_bottom_view"/>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
