<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--用户名称-->
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/tvUserName"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text=""
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvCondition"
                android:gravity="center_vertical"
                android:textColor="#e5c891"
                android:textSize="12dp"
                android:text="待审核"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <View
            android:background="@color/f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--审批编号-->
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/llSerialNumber"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/SerialNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="审批编号"/>

                <TextView
                    android:textColor="@color/home_text_normal"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/tvSerialNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:src="@drawable/xiayibu"/>
            </LinearLayout>

            <View
                android:id="@+id/lluserJob_view"
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/llUserJod"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/userJod"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="工        号"/>

                <TextView
                    android:textColor="@color/home_text_normal"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/tvUserJod"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""/>
            </LinearLayout>

            <View
                android:id="@+id/llSerialNumber_view"
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!--单据信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:id="@+id/llType"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:id="@+id/Department"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="所在部门"/>

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/tvDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent"
                        android:src="@drawable/xiayibu"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-5dp"
                    android:background="@color/f0f0f0"/>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="请假类型"/>

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=""/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent"
                        android:src="@drawable/xiayibu"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-5dp"
                    android:background="@color/f0f0f0"/>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="开始时间"/>

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text=""/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent"
                        android:src="@drawable/xiayibu"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-5dp"
                    android:background="@color/f0f0f0"/>

                <LinearLayout
                    android:id="@+id/llEndTime"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="结束时间"/>

                    <TextView
                        android:textColor="@color/home_text_normal"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text=""/>

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent"
                        android:src="@drawable/xiayibu"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-5dp"
                    android:background="@color/f0f0f0"/>

            </LinearLayout>


            <!--请假天数-->
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="时长（天）"
                    android:textColor="@color/home_text_normal"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/tvLoadOnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/home_text_normal"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/f0f0f0"/>



            <!--请假理由-->
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="请假事由"
                    android:textColor="@color/home_text_normal"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/tvReason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:visibility="gone"
                        android:textColor="@color/home_text_normal"
                        android:gravity="left"
                        android:id="@+id/evCause"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:maxLength="200"
                        android:background="@null"
                        android:hint=""
                        android:textColorHint="@color/userinfo"
                        />


                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/f0f0f0"/>


            <!--查看历史-->
            <LinearLayout
                android:id="@+id/llHistory"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHistory"
                    android:textColor="@color/home_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="查看Ta的历史记录"/>
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/home_text_normal"
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text=""/>

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/transparent"
                        android:src="@drawable/xiayibu"/>
                </RelativeLayout>


            </LinearLayout>

            <View
                android:id="@+id/llHistory_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-5dp"
                android:background="@color/f0f0f0"/>

        </LinearLayout>

        <!--审批的 同意 拒绝操作-->
        <RelativeLayout
            android:id="@+id/rlApproveOperation"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <View
                    android:layout_alignParentTop="true"
                    android:background="@color/f0f0f0"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"/>
                <Button
                    android:background="@color/transparent"
                    android:id="@+id/btAgree"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/home_text_selected"
                    android:textSize="16dp"
                    android:text="  同 意  "
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"/>

                <Button
                    android:background="@color/transparent"
                    android:id="@+id/btRefuse"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/home_text_selected"
                    android:textSize="16dp"
                    android:text="  拒 绝  "
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"/>
            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivStatusbg"
            android:src="@drawable/shen_pi_tong_guo"
            android:background="@color/transparent"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </RelativeLayout>

</LinearLayout>
