<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:background="@color/home_text_selected"
    android:orientation="vertical">
    <!--头部视图-->



    <include
        layout="@layout/head_view_red"
        android:id="@+id/head_red"/>


    <RelativeLayout
        android:layout_below="@+id/head_red"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:visibility="gone"
            android:src="@drawable/fanhui"
            android:layout_centerVertical="true"
            android:id="@+id/head_ivBack"
            android:layout_marginLeft="0dp"
            android:layout_width="43dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_height="35dp"/>

        <TextView
            android:gravity="center_vertical"
            android:maxEms="8"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/head_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:id="@+id/head_ivOK"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/head_tvOK"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>


</RelativeLayout>