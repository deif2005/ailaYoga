<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relatview"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/shape_dialog_bg_five"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="@color/home_text_normal"
            android:text="筛选"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/llNumber"
            android:layout_marginTop="20dp"
            android:background="@drawable/radio_button_selected_bg"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="35dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/home_text_selected"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="按剩余次数最少"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llNumberOfDays"
            android:layout_marginTop="20dp"
            android:background="@drawable/radio_button_selected_bg"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="35dp">
            <TextView
                android:textSize="14dp"
                android:textColor="@color/home_text_selected"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="按剩余天数最少"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:textSize="16dp"
            android:textColor="@color/home_text_normal"
            android:text="按卡名称"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/rvPBS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
