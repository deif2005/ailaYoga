<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutNoActivation"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="50dp"
                android:src="@drawable/wei_ji_huo"
                android:background="@null"
                android:scaleType="centerCrop"
                android:id="@+id/imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:textColor="@color/home_text_selected"
                android:gravity="center_horizontal"
                android:layout_below="@id/imageview"
                android:id="@+id/tvNoActivation"
                android:text="卡项暂未激活，不能校准哦"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    <LinearLayout
        android:id="@+id/layout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="@color/home_text_normal"
            android:text="数据校准"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/llTermOfValidity"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="20dp"
                android:text="是否开启有效期"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <RadioButton
                    style="@style/package_radio_style"
                    android:checked="false"
                    android:id="@+id/RadioButton5"
                    android:textSize="14dp"
                    android:text="是"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:layout_marginLeft="50dp"
                    style="@style/package_radio_style"
                    android:checked="true"
                    android:id="@+id/RadioButton6"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:text="否"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvNumberText"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:text="剩余次数"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvNumber"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:text="15次"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvDateText"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:text="激活日期"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvDate"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:text=""
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvCaliBratIonText"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:text="校准日期"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvCaliBratIon"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_selected"
                    android:text="15次"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/tvCaliBratIon"
                    android:src="@drawable/jiao_zhun_xiang_xia"
                    android:background="@color/transparent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="@color/six"
            android:text="( 只选择卡项结束日期即可 )"
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <LinearLayout
            android:id="@+id/llRevise"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvReviseText"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:text="修改次数"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etNumber"
                android:hint="请输入次数"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:scrollbars="none"
                android:digits="0123456789"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="2dp"
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/confirm_item"/>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>

</FrameLayout>
