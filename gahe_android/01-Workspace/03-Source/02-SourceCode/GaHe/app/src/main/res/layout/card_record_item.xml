<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_send_date_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvMemberCardName"
                android:layout_marginTop="-20dp"
                android:gravity="center_horizontal"
                android:textSize="14dp"
                android:textColor="@color/home_text_selected"
                android:text="VIP会员几次卡"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMemberCardId"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                android:textColor="@color/home_text_selected"
                android:text="VIP会员几次卡"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btCardStatus"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/shape_card_status_green_style"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="使用中"
                android:layout_width="60dp"
                android:layout_height="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ji_lu"
                android:background="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvItem1"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_selected"
                    android:text="次数"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvItem2"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_selected"
                    android:text="价格(元)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvItem3"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_selected"
                    android:text="操作"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="-5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvItem4"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="次数"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvItem5"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="开卡时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvItem6"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="有效期"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
