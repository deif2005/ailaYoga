<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_height"
   >

    <LinearLayout
        android:background="@drawable/shape_my_self_write"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:id="@+id/llEditText"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="编辑客户资料"
            android:textSize="18dp"
            android:textColor="@color/home_text_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:background="@color/f0f0f0"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="@color/home_text_normal"
                    android:text="昵称"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/radio_whitenull_back"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <EditText
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/evName"
                        android:scrollbars="none"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/six"
                        android:hint="请输入名称"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="@color/home_text_normal"
                    android:text="生日"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/llBirthday"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/radio_whitenull_back"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                   <TextView
                       android:gravity="center_vertical"
                       android:text="请选择"
                       android:layout_marginLeft="5dp"
                       android:id="@+id/tvBirthday"
                       android:textSize="14dp"
                       android:textColor="@color/six"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="@color/home_text_normal"
                    android:text="手机号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/radio_whitenull_back"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <EditText
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/evPhoneName"
                        android:scrollbars="none"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:textColor="@color/home_text_normal"
                        android:inputType="phone"
                        android:hint="请输入手机号"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textColor="@color/home_text_normal"
                    android:text="备注"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radio_whitenull_back"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:id="@+id/evRemarks"
                        android:maxLength="15"
                        android:scrollbars="none"
                        android:background="@null"
                        android:gravity="left"
                        android:textColor="@color/six"
                        android:hint="请输入"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <!--简介编辑-->
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="@color/home_text_normal"
            android:text="性别"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_weight="1"
                style="@style/package_radio_style"
                android:checked="false"
                android:id="@+id/RadioButton1"
                android:layout_marginRight="50dp"
                android:textSize="14dp"
                android:text="男"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:layout_marginLeft="-40dp"
                android:layout_weight="1"
                style="@style/package_radio_style"
                android:checked="true"
                android:id="@+id/RadioButton2"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:text="女"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llTypeManager"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="16dp"
                android:textColor="@color/home_text_normal"
                android:text="标签管理"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTypeManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/llText"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="该用户还不是多点运动App用户"
                    android:textColor="@color/type_back"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:layout_toLeftOf="@+id/btCancel"
                android:layout_marginRight="20dp"
                android:id="@+id/btConservation"
                android:textSize="16dp"
                android:text="继续"
                android:background="@drawable/shape_login_style"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/btCancel"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:text="取消"
                android:background="@drawable/shape_cancel_style"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
