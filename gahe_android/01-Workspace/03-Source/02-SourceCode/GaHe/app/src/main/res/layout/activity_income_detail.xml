<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dodsport.activity.financial.IncomeDetailActivity"
    android:orientation="vertical">
    <include layout="@layout/head2_view"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="250dp">
        </com.github.mikephil.charting.charts.PieChart>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:background="@color/vip_inverse_proportion"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:layout_marginTop="18dp"
                    android:text="店铺会员卡收入占比40%"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:background="@color/mall_inverse_proportion"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:layout_marginTop="18dp"
                    android:text="商城抽成收入占比40%"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:background="@color/recommend_inverse_proportion"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:layout_marginTop="18dp"
                    android:text="推荐学员收入占比40%"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:background="@color/ad_inverse_proportion"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp"
                    android:layout_marginTop="18dp"
                    android:text="广告业务推广收入占比40%"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_marginTop="50dp"
            android:background="@color/f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="（万元）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--竖状型-->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="30dp">
        </com.github.mikephil.charting.charts.BarChart>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/home_text_normal"
                android:textSize="18dp"
                android:text="月份对比图"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
