<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/head2_view"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="可选择的门店"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/llAddStore"
                android:background="@drawable/shape_login_style"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:text="添加"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rvAddStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="已关联"
                android:textSize="14dp"
                android:textColor="@color/home_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/llDeleteStore"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/yichu"
                    android:background="@color/transparent"
                    android:layout_width="60dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rvDeleteStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/l"
            android:background="@drawable/shape_my_self_write"
            android:layout_marginTop="20dp"
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >
            <Button
                android:id="@+id/btConservation"
                android:gravity="center"
                android:layout_marginRight="90dp"
                android:layout_alignParentRight="true"
                android:textSize="14dp"
                android:background="@drawable/shape_login_style"
                android:text="保存"
                android:textColor="@color/white"
                android:layout_width="60dp"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/btCancel"
                android:background="@drawable/shape_cancel_style"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="取 消"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
