<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/my_set_llNick"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_linear_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/my_set_tvNickName"
                style="@style/MyAndSystemSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nickname"
                android:textColor="@color/three" />


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/nine" />


            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayibu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_set_llNick2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_linear_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tvJobNumber"
                style="@style/MyAndSystemSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nickname"
                android:textColor="@color/three" />

            <TextView
                android:text="迟到"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/nine" />

            <TextView
                android:text="迟到"
                android:id="@+id/tvBeLate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/home_text_selected" />


            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:id="@+id/ivEditEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayibu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_set_llNick3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_linear_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tvPosition"
                style="@style/MyAndSystemSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nickname"
                android:textColor="@color/three" />

            <TextView
                android:text="早退"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/nine" />

            <TextView
                android:text="迟到"
                android:id="@+id/tvLeaveEarly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/home_text_selected" />


            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayibu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_set_llNick4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/selector_linear_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tvDepartment"
                style="@style/MyAndSystemSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nickname"
                android:textColor="@color/three" />

            <TextView
                android:text="缺卡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/nine" />

            <TextView
                android:text="迟到"
                android:id="@+id/tvMissingCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/home_text_selected" />


            <ImageView
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/xiayibu" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
