<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dodsport.activity.ConfirmUserInfoActivity">

    <include layout="@layout/head2_view"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tvName"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/userinfo"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"/>

            </LinearLayout>

            <LinearLayout
               android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="电话"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView
                   android:id="@+id/tvPhone"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/userinfo"
                    android:text="000000000000000000"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="性别"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tvSex"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/userinfo"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="身份证"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/tvIDCard"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/userinfo"
                    android:text="000000000000000000"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"/>

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:id="@+id/rlCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCompanyName"
                    android:textSize="14dp"
                    android:textColor="@color/home_text_normal"
                    android:text="公司名称  （可选）"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

                <ImageView
                    android:id="@+id/ivCompanyName"
                    android:layout_marginRight="0dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/xiayibu"
                    android:background="@color/transparent"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>

            </RelativeLayout>


                <TextView
                    android:id="@+id/tvAddress"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"
                    android:text="诺姆瑜伽馆龙岗分店"
                    android:textColor="@color/userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="@color/f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:layout_marginRight="50dp"
                android:text=""
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="请设置登录密码（6-20位）"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="20dp"
                android:textColor="#343434"
                android:textColorHint="#939393"
                android:textSize="14dp" />

            <CheckBox
                android:id="@+id/cbShow1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:layout_alignParentRight="true"
                android:background="@drawable/checkbox_style"
                android:layout_width="22dp"
                android:layout_height="15dp"
                android:checked="true"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivshow1"
                android:layout_marginRight="10dp"
                android:background="@drawable/checkbox_style"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="16dp"/>

            <View
                android:layout_alignParentBottom="true"
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:layout_marginRight="50dp"
                android:text=""
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="请再次确认密码（6-20位）"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="20dp"
                android:textColor="#343434"
                android:textColorHint="#939393"
                android:textSize="14dp" />


            <CheckBox
                android:id="@+id/cbShow2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:layout_alignParentRight="true"
                android:background="@drawable/checkbox_style"
                android:layout_width="22dp"
                android:layout_height="16dp"
                android:checked="true"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivshow2"
                android:layout_marginRight="10dp"
                android:background="@drawable/checkbox_style"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="16dp"/>
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:gravity="center"
                    android:textSize="14dp"
                    android:background="@drawable/shape_login_style"
                    android:textColor="@color/white"
                    android:text="确定"
                    android:id="@+id/btOK"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

           <LinearLayout
               android:layout_marginLeft="20dp"
               android:gravity="center"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <Button
                   android:gravity="center"
                   android:textSize="14dp"
                   android:background="@drawable/shape_cancel_style"
                   android:textColor="@color/white"
                   android:text="取消"
                   android:id="@+id/btCancel"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
           </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>
