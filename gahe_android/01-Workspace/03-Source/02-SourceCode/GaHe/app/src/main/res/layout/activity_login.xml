<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dodsport.activity.LoginActivity">


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:src="@drawable/duo_dian_yun_dong_logo"
            android:background="@color/transparent"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/phone"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="@color/home_text_normal"
                android:text="手机号"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <View
                android:background="@color/f0f0f0"
                android:layout_toLeftOf="@+id/account"
                android:layout_gravity="center_vertical"
                android:layout_width="2dp"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8.5dp"
                android:src="@drawable/cha_cha"
                android:background="@color/transparent"
                android:layout_width="14dp"
                android:layout_height="14dp"/>

            <EditText
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/phone"
                android:text=""
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="20dp"
                android:textColor="#343434"
                android:textColorHint="#939393"
                android:textSize="14dp" />



        </RelativeLayout>

        <View
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_width="240dp"
            android:layout_height="50dp">

            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/passwordText"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="@color/home_text_normal"
                android:text="密    码"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <View
                android:background="@color/f0f0f0"
                android:layout_toLeftOf="@+id/password"
                android:layout_gravity="center_vertical"
                android:layout_width="2dp"
                android:layout_height="30dp"/>

            <ImageView
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6.5dp"
                android:src="@drawable/shangsheng"
                android:background="@color/transparent"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

            <EditText
                android:layout_toRightOf="@+id/passwordText"
                android:text=""
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="20dp"
                android:textColor="#343434"
                android:textColorHint="#939393"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btLogin"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_login_style"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:textColor="@color/detail_color"
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_base_margin"
                android:text="新用户注册"
                android:textSize="13dp" />


            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/detail_color"
                    android:id="@+id/forgetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_base_margin"
                    android:text="忘记密码?"
                    android:textSize="13dp" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
