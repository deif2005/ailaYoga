<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relatview"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14dp"
            android:textColor="@color/home_text_normal"
            android:text="筛选"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <com.dodsport.weight.MultiLineRadioGroup
            android:id="@+id/MultiLineRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:child_count="7"
            app:child_margin_horizontal="20.0dip"
            app:child_margin_vertical="15.0dip"
            app:child_layout="@layout/child2"
            app:single_choice="true">
        </com.dodsport.weight.MultiLineRadioGroup>

        <LinearLayout
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Button
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_login_style"
                android:id="@+id/btDocument"
                android:text="确 定"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
