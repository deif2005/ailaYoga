<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="15dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="0.65"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/ivUserHead"
                android:src="@drawable/user_head"
                android:background="@color/transparent"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:maxLines="1"
                        android:maxEms="16"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="@color/home_text_normal"
                        android:text="类型梵蒂冈苟富贵个地方刚回家"
                        android:id="@+id/textView1"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="-30dp"
                        android:textSize="13dp"
                        android:textColor="@color/home_text_normal"
                        android:text="女"
                        android:id="@+id/tvSex"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/six"
                    android:text="团课#私教/45分钟"
                    android:id="@+id/textView2"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="0.94"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llStatus1"
                android:gravity="center_vertical"
                android:background="@drawable/shape_card_status_green2_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:text=" 已预约 "
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="0.78"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/llRemind"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/smallSpace"
                    android:layout_marginBottom="@dimen/smallSpace"

                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_selected_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvRemind"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/home_text_selected"
                        android:text="提醒"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSignIn"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/smallSpace"
                    android:layout_marginBottom="@dimen/smallSpace"
                    android:background="@drawable/radio_button_selected_background"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvSignIn"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/home_text_selected"
                        android:text="签到"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/llBreakAnAppointment"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/smallSpace"
                    android:layout_marginBottom="@dimen/smallSpace"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_selected_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvBreakAnAppointment"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/home_text_selected"
                        android:text="爽约"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCancel"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/smallSpace"
                    android:layout_marginBottom="@dimen/smallSpace"
                    android:background="@drawable/radio_button_selected_background"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/home_text_selected"
                        android:text="取消"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"/>

</LinearLayout>