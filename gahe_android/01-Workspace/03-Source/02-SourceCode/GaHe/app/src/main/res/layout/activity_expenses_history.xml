<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/head2_view"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textColor="@color/home_text_normal"
            android:id="@+id/tvSubmitName"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:text="张三"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/receive_text"
            android:layout_marginTop="5dp"
            android:text="待审批"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBillsNumber"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="3"
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvTiemText1"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="单据编号"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/home_text_normal"
                android:id="@+id/tvTiem1"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:text="张三"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:background="@color/f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="3"
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/tvTiemText2"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="工        号"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/tvTiem2"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="张三"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="3"
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/tvTiemText3"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="报销部门"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/tvTiem3"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="张三"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="3"
                    android:textColor="@color/home_text_normal"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="款项用途"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/tvUse"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="香港出差4天"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="3"
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/tvTiemText4"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="金额 (元)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/home_text_normal"
                    android:id="@+id/tvTiem4"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="张三"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:background="@color/f0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/llExpense"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_text_normal"
                android:textSize="13dp"
                android:text="单据"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <!---->
                <com.dodsport.activity.expenses.expenseaccountmanage.MyGridView
                    android:id="@+id/Bills_item_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:descendantFocusability="afterDescendants"
                    android:numColumns="3">

                </com.dodsport.activity.expenses.expenseaccountmanage.MyGridView>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_marginTop="10dp"
            android:background="@color/f0f0f0"/>

        <!--查看历史-->
        <LinearLayout
            android:id="@+id/llHistory"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHistory"
                android:textColor="@color/home_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="查看Ta的历史记录"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="gone"
                    android:textColor="@color/home_text_normal"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text=""/>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:src="@drawable/xiayibu"/>
            </RelativeLayout>


        </LinearLayout>



        <!--审批的 同意 拒绝操作-->
        <RelativeLayout
            android:id="@+id/rlApproveOperation"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <View
                    android:layout_alignParentTop="true"
                    android:background="@color/f0f0f0"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"/>
                <Button
                    android:background="@color/transparent"
                    android:id="@+id/btAgree"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/home_text_selected"
                    android:textSize="15dp"
                    android:text="同意并支付"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"/>

                <Button
                    android:background="@color/transparent"
                    android:id="@+id/btRefuse"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/home_text_selected"
                    android:textSize="16dp"
                    android:text="  拒 绝  "
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
            <ImageView
                android:background="@color/transparent"
                android:visibility="gone"
                android:layout_marginRight="80dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:id="@+id/ivApproveBearFruit"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
