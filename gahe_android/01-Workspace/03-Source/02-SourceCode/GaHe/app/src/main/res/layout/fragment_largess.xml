<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="赠送"
            android:textSize="16dp"
            android:textColor="@color/home_text_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLargess"
            android:text="赠送次数"
            android:layout_marginTop="30dp"
            android:textSize="14dp"
            android:textColor="@color/six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/radio_whitenull_back"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:imeOptions="actionSend|flagNoExtractUi"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:scrollbars="none"
                android:background="@null"
                android:id="@+id/etLargess"
                android:hint="请输入赠送次数"
                android:textSize="14dp"
                android:digits="0123456789"
                android:textColor="@color/home_text_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/confirm_item"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
