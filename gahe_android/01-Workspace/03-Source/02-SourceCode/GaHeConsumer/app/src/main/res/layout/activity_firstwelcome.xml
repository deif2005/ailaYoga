<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

   <!--底部3个小圆点-->
        <LinearLayout
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:id="@+id/mLinearLyout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgeview1"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/welcomebacktrue" />

            <ImageView
                android:id="@+id/imgeview2"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/welcomeback" />

            <ImageView
                android:id="@+id/imgeview3"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/welcomeback" />


        </LinearLayout>




    <TextView
        android:id="@+id/vp_tvCancel"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/shape_welecom_cancel_bg"
        android:text="跳过"
        android:layout_width="65dp"
        android:layout_height="30dp" />






</RelativeLayout>